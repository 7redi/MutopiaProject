% Title Page Markup for bookTitleMarkup
titlePage = \markup{
      \sans
      \column{
        \vspace #2.5
        \fill-line{
          \null \fontsize #6 \bold \fromproperty #'header:TPcomposer \null
        }
        \vspace #2
        \fill-line {
          \null \fontsize #3
          \fromproperty #'header:opus
          \null
        }
        \vspace #17
 %       \vspace #2
    %    \fill-line { \draw-line #'(80 . 0)}
% \vspace #0.5
